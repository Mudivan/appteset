<div id="<%= dom_id series %>">
  

  <div>
    <!--Definindo a classe table com bootstrap para renderizar em formato de tabela-->
    
    <table class="table table-dark table-striped align-middle">

    <thead>
      <tr>
        <th scope="col"></th>   
        <th scope="col">Situação</th>
        <th scope="col">Temporada</th>
        <th scope="col">Plataforma</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row"> <%= series.nome %> </th>
        <td><%= series.situacao %></td>
        <td><%= series.temporada %></td>
        <td><%= series.plataforma %></td>
      </tr>
    </tbody>
    </table>
  </div>

</div>

  

